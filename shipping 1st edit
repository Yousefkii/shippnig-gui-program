    class database
    {
        public string[] usern = new string [10];
        public string[] userp = new string[10];
        int top = -1;


        public void add(string name,string pass )
        {
            ++top;
            usern[top] = name;
            userp[top] = pass;
        }
        public int check(string name, string pass)
        {
            for (int i = 0; i <= top; i++)
            {
                if (name == usern[i] && pass == userp[i])
                {
                    return 1;
                    //for (int j = i; j <= top; j++)
                    //{
                    //    if (pass == userp[j])
                    //    {
                    //        return 1;
                    //    }
                    //}
                }
            }
            return 0;
        }
    }  
