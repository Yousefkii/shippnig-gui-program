        private void login_click(object sender, EventArgs e)
        {
            database db = new database();
            if (db.check(username_text.Text, password_text.Text) == 0)
            {
                MessageBox.Show("sorry you need to have an account first");

            }
            if (db.check(username_text.Text, password_text.Text) == 1)
            {
                BackColor = Color.Navy;
                ForeColor = Color.OldLace;
                Username.Visible = false;
                password.Visible = false;
                password_text.Size = new Size(0, 0);
                username_text.Size = new Size(0, 0);
                login.Size = new Size(0, 0);
                sign_up.Size = new Size(0, 0);

                welcome.Location = new Point(50, 20);
                welcome.AutoSize = true;
                welcome.Text = $"welcome {username_text.Text}!...";
                welcome.Font = new Font("Arial", 28);

                choice.Location = new Point(250, 150);
                choice.AutoSize = true;
                choice.Text = "what to kick !??...";
                choice.Font = new Font("Arial", 22);

                files.Location = new Point(350, 250);
                files.AutoSize = true;
                files.Text = "files";
                files.Font = new Font("", 20);
                files.Click += new EventHandler(files_click);

                backage.Location = new Point(450, 250);
                backage.AutoSize = true;
                backage.Visible = true;
                backage.Text = "backage";
                backage.Font = new Font("Arial", 20);
                backage.Click += new EventHandler(backage_click);
            }
        }

